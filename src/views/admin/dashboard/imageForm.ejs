<!DOCTYPE html>
<html lang="es">
	<%- include("../template/head") %>

	<body>
		<div class="d-flex vh-100">
			<%- include("../components/headerAdmin", {RoutesLinks}) %>

			<div class="overflow-y-auto flex-grow-1">
				<main class="container-fluid">
					<div class="d-flex justify-content-between align-items-center">
						<h3 class="mt-3">Imagenes</h3>
					</div>

					<hr class="" />

					<div class="">
						<!--  -->
						<div class="d-flex flex-grap align-items-start">
							<% otherImages.forEach(element => { %> <%-
							include("../components/ImagenItemForm", {element,RoutesLinks})%>
							<% }) %>
						</div>

						<form
							action="<%= RoutesLinks.dashboard.imageCreate(product.id) %>"
							method="post"
							clas
						>
							<div class="mt-3">
								<label class="form-label" for="name">Url de imagen</label>
								<input
									type="text"
									name="url"
									class="form-control"
									value=""
									autofocus
									autocomplete="none"
									placeholder="Url de imagen"
									required
								/>
							</div>

							<div class="my-3">
								<input class="btn btn-primary" type="submit" value="Agregar" />

								<a
									class="btn btn-info"
									href="<%= RoutesLinks.dashboard.productList %>"
									>Terminar</a
								>
							</div>
						</form>
					</div>
				</main>
			</div>
		</div>

		<%- include("../template/scripts") %>
	</body>
</html>
