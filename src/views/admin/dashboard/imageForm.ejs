<!DOCTYPE html>
<html lang="es">
	<%- include("../../template/head") %>

	<body id="page-top">
		<!-- Navigation-->
		<%- include("../../components/NavBarComponent") %>

		<section class="page-section bg-light" id="portfolio">
			<div class="container">
				<div class="d-flex justify-content-between align-items-center">
					<h3 class="mt-3">Imagenes</h3>
				</div>

				<div class="">
					<!--  -->
					<div class="d-flex flex-grap align-items-start">
						<% otherImages.forEach(element => { %>
						<!--  -->
						<%- include("../../components/ImagenItemForm",
						{element,RoutesLinks})%>
						<!--  -->
						<% }) %>
					</div>

					<form
						action="<%= RoutesLinks.admin.imageCreate(product.id) %>"
						method="post"
						clas
					>
						<div class="mt-3">
							<label class="form-label" for="name">Url de imagen</label>
							<input
								type="text"
								name="url"
								class="form-control"
								value=""
								autofocus
								autocomplete="none"
								placeholder="Url de imagen"
								required
							/>
						</div>

						<div class="my-3">
							<input class="btn btn-primary" type="submit" value="Agregar" />

							<a
								class="btn btn-info"
								href="<%= RoutesLinks.admin.productList %>"
								>Terminar</a
							>
						</div>
					</form>
				</div>
			</div>
		</section>

		<%- include("../../template/scripts") %>
	</body>
</html>
