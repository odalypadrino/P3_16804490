<% if (data) { %>
<form
	action="<%= RoutesLinks.admin.categoryFormEdit(data.id) %>"
	method="post"
>
	<div class="mt-3">
		<label class="form-label" for="name">Nombre de la categoria</label>
		<input
			id="name"
			class="form-control"
			type="text"
			name="name"
			value="<%= data.name %>"
			autocomplete="none"
			placeholder="Nombre de la categoria"
		/>
	</div>

	<input class="btn btn-primary mt-3" type="submit" />
</form>

<!-- <a href="<%= RoutesLinks.admin.imageForm(data.id) %>">a√±adir imagenes</a> -->

<% } else { %>

<form action="<%= RoutesLinks.admin.categoryFormCreate %>" method="post">
	<div class="mt-3">
		<label class="form-label" for="name">Nombre de la categoria</label>
		<input
			id="name"
			class="form-control"
			type="text"
			name="name"
			autocomplete="none"
			placeholder="Nombre de la categoria"
			required
		/>
	</div>

	<input class="btn btn-primary mt-3" type="submit" />
</form>

<% } %>
