<% if (data) { %>
<form
	action="<%= RoutesLinks.admin.productFormEdit(data.id) %>"
	method="post"
>
	<div class="mt-3">
		<label class="form-label" for="categoryId">Catergoría</label>
		<select class="form-select" id="categoryId" name="categoryId">
			<% categories.forEach(element => { %>

			<option value="<%= element.id %>"
				<%= element.id == data.categoryId ? "selected" : "" %>
				>
				<%= element.name %>
			</option>

			<% }) %>
		</select>
	</div>

	<div class="mt-3">
		<label class="form-label" for="code">Código</label>
		<input
			id="code"
			class="form-control"
			type="text"
			name="code"
			value="<%= data.code %>"
			autofocus
			autocomplete="none"			required

			placeholder="Código"
		/>
	</div>

	<div class="mt-3">
		<label class="form-label" for="name">Nombre del producto</label>
		<input
			id="name"
			class="form-control"
			type="text"
			name="name"
			value="<%= data.name %>"
			autocomplete="none"
			placeholder="Nombre del producto"			required

		/>
	</div>

	<div class="mt-3">
		<label class="form-label" for="cost">Costo</label>
		<input
			id="cost"
			class="form-control"
			type="number"
			name="cost"
			value="<%= data.cost %>"
			autocomplete="none"
			placeholder="Costo"			required

		/>
	</div>

	<div class="mt-3">
		<label class="form-label" for="description">descripción</label>
		<textarea
			id="description"
			class="form-control"
			name="description"
			value="<%= data.description %>"
			cols="30"
			rows="10"
			placeholder="descripcion"			

		></textarea>
	</div>

	<div class="mt-3">
		<label class="form-label" for="size">Talla</label>
		<input
			id="size"
			class="form-control"
			type="text"
			name="size"
			value="<%= data.size %>"
			autocomplete="none"
			placeholder="Talla"			required

		/>
	</div>

	<div class="mt-3">
		<label class="form-label" for="brand">Marca</label>
		<input
			id="brand"
			class="form-control"
			type="text"
			name="brand"
			value="<%= data.brand %>"
			autocomplete="none"
			placeholder="Marca"			required

		/>
	</div>

	<input class="btn btn-primary mt-3" type="submit" value="Siguiente" />
</form>

<!-- <a href="<%= RoutesLinks.admin.imageForm(data.id) %>">añadir imagenes</a> -->

