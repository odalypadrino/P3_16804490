<a
	class="text-decoration-none text-black py-2 px-3 flex-grow-1 shadow rounded product__card m-2"
	href="#"
>
	<div class="row">
		<div class="col-3">
			<div class="rounded shadow-sm product_image_admin">
				<% if (element) { %>
				<img
					class="w-100 h-100 object-fit-cover"
					src="<%= element.product.images[0].url%>"
					alt=""
				/>
				<% } else { %>
				<img class="w-100 h-100 object-fit-contain" src="/noimage.jpg" alt="" />

				<% } %>
			</div>
		</div>
		<div class="col-9">
			<div class="d-flex flex-column justify-content-center h-100">
				<div><b>Producto:</b> <%= element.product.name %></div>
				<div><b>Cantidad:</b> <%= element.quantity %></div>
				<div><b>Pagado:</b> <%= element.amount %></div>
				<div class=""><b>Cliente:</b> <%= element.client.email %></div>
				<div class="">
					<b>Fecha:</b> <%= (new Date(element.date).toLocaleString()) %>
				</div>
			</div>
		</div>
	</div>
</a>
