<!DOCTYPE html>
<html lang="es">
	<%- include("template/head") %>

	<body id="page-top">
		<%- include("components/NavBarComponent") %>

		<section class="page-section bg-light" id="portfolio">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-6">
						<div
							id="carouselExampleIndicators"
							class="carousel slide"
							data-bs-ride="carousel"
						>
							<div class="carousel-indicators">
								<button
									type="button"
									data-bs-target="#carouselExampleIndicators"
									data-bs-slide-to="0"
									class="active"
									aria-current="true"
									aria-label="Slide 1"
								></button>
								<button
									type="button"
									data-bs-target="#carouselExampleIndicators"
									data-bs-slide-to="1"
									aria-label="Slide 2"
								></button>
								<button
									type="button"
									data-bs-target="#carouselExampleIndicators"
									data-bs-slide-to="2"
									aria-label="Slide 3"
								></button>
							</div>
							<div class="carousel-inner">
								<% product.images.forEach((i,index) => { %>
								<!--  -->

								<div
									class="carousel-item <% if (index===0) { %> active <% } %>"
								>
									<div class="d-block w-100">
										<div style="height: 30rem; max-height: 30rem">
											<img
												src="<%= i.url %>"
												class="object-fit-contain w-100 h-100"
												alt="..."
											/>
										</div>
									</div>
								</div>

								<!--  -->
								<% }) %>
							</div>
							<button
								class="carousel-control-prev"
								type="button"
								data-bs-target="#carouselExampleIndicators"
								data-bs-slide="prev"
							>
								<span
									class="carousel-control-prev-icon"
									aria-hidden="true"
								></span>
								<span class="visually-hidden">Previous</span>
							</button>
							<button
								class="carousel-control-next"
								type="button"
								data-bs-target="#carouselExampleIndicators"
								data-bs-slide="next"
							>
								<span
									class="carousel-control-next-icon"
									aria-hidden="true"
								></span>
								<span class="visually-hidden">Next</span>
							</button>
						</div>
					</div>

					<div class="col-sm-12 col-md-6 mt-sm-3">
						<h5 style="font-size: 2rem"><%= product.name %></h5>

						<p><%= product.description %></p>
						<ul class="list-inline mt-2">
							<li>
								<strong>Marca:</strong>
								<%= product.brand %>
							</li>

							<li>
								<strong>Talla:</strong>
								<%= product.size %>
							</li>

							<li>
								<strong>Categor√≠a:</strong>
								<%= product.category.name %>
							</li>
						</ul>

						<p style="font-size: 2rem">$ <%= product.cost %></p>
						<form action="<%= RoutesLinks.client.credicard %>" method="post">
							<input type="hidden" name="productId" value="<%= product.id %>" />

							<div class="mb-3">
								<label for="quantity" class="form-label">Cantidad</label>

								<input
									type="number"
									name="quantity"
									id="quantity"
									class="form-control"
									value="1"
								/>
							</div>

							<button class="btn btn-primary w-100">Comprar</button>
						</form>
					</div>
				</div>
			</div>
		</section>

		<%- include("template/scripts") %>
